#!/bin/sh

set -eu

installdir=$1

xdg-desktop-menu uninstall --novendor "${installdir}/../cmaptools.desktop"

for icon in "${installdir}/../icons/"*.png; do
  icon_size="${icon##*/cmaptools-}"
  xdg-icon-resource uninstall --novendor --size "${icon_size%.png}" "${icon}" cmaptools
done

rm -f /usr/bin/CmapTools
