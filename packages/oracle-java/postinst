#!/bin/sh

set -eu

installdir=$1

update-alternatives \
    --install /usr/lib/mozilla/plugins/libjavaplugin.so mozilla-javaplugin.so \
    "${installdir}/jre/lib/i386/libnpjp2.so" 1100

update-alternatives \
    --install /usr/bin/javaws javaws \
    "${installdir}/bin/javaws" 1100 \
    --slave /usr/share/man/man1/javaws.1.gz javaws.1.gz \
    "${installdir}/man/man1/javaws.1"
