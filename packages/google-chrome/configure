#!/bin/sh

set -eu

installdir=$1

mkdir -p /usr/bin
mkdir -p /usr/share/applications
mkdir -p /usr/share/man/man1
mkdir -p /usr/share/icons/hicolor/16x16/apps
mkdir -p /usr/share/icons/hicolor/22x22/apps
mkdir -p /usr/share/icons/hicolor/24x24/apps
mkdir -p /usr/share/icons/hicolor/32x32/apps
mkdir -p /usr/share/icons/hicolor/48x48/apps
mkdir -p /usr/share/icons/hicolor/64x64/apps
mkdir -p /usr/share/icons/hicolor/128x128/apps
mkdir -p /usr/share/icons/hicolor/256x256/apps

ln -sf "${installdir}/opt/google/chrome/product_logo_16.png" \
    /usr/share/icons/hicolor/16x16/apps/google-chrome.png
ln -sf "${installdir}/opt/google/chrome/product_logo_22.png" \
    /usr/share/icons/hicolor/22x22/apps/google-chrome.png
ln -sf "${installdir}/opt/google/chrome/product_logo_24.png" \
    /usr/share/icons/hicolor/24x24/apps/google-chrome.png
ln -sf "${installdir}/opt/google/chrome/product_logo_32.png" \
    /usr/share/icons/hicolor/32x32/apps/google-chrome.png
ln -sf "${installdir}/opt/google/chrome/product_logo_48.png" \
    /usr/share/icons/hicolor/48x48/apps/google-chrome.png
ln -sf "${installdir}/opt/google/chrome/product_logo_64.png" \
    /usr/share/icons/hicolor/64x64/apps/google-chrome.png
ln -sf "${installdir}/opt/google/chrome/product_logo_128.png" \
    /usr/share/icons/hicolor/128x128/apps/google-chrome.png
ln -sf "${installdir}/opt/google/chrome/product_logo_256.png" \
    /usr/share/icons/hicolor/256x256/apps/google-chrome.png
ln -sf "${installdir}/usr/share/man/man1/google-chrome.1" \
    /usr/share/man/man1/google-chrome.1
ln -sf "${installdir}/usr/share/applications/google-chrome.desktop" \
    /usr/share/applications/google-chrome.desktop
ln -sf "${installdir}/opt/google/chrome/google-chrome" \
    /usr/bin/google-chrome-stable

export PEPPER_FLASH_VERSION=$(grep '"version":' "${installdir}/opt/google/chrome/PepperFlash/manifest.json"| grep -Po '(?<=version": ")(?:\d|\.)*')

cat <<EOF >/etc/chromium-browser/default
# Default settings for chromium-browser. This file is sourced by /bin/sh from
# /usr/bin/chromium-browser

# Options to pass to chromium-browser

CHROMIUM_FLAGS="--ppapi-flash-path=${installdir}/opt/google/chrome/PepperFlash/libpepflashplayer.so --ppapi-flash-version=$PEPPER_FLASH_VERSION"
EOF
