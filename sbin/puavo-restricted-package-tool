set -eu

PUAVOLTSP_IMAGE_NAME_PATH=${PUAVOLTSP_IMAGE_NAME_PATH:-/etc/ltsp/this_ltspimage_name}
RESTRICTED_PKG_LIBDIR=${RESTRICTED_PKG_LIBDIR:-/usr/lib/puavo-ltsp-client/restricted-packages}
RESTRICTED_PKG_SHAREDIR=${RESTRICTED_PKG_SHAREDIR:-/usr/share/puavo-ltsp-client/restricted-packages}

PUAVOLTSP_IMAGE_NAME=$(cat "$PUAVOLTSP_IMAGE_NAME_PATH")

export PUAVOLTSP_IMAGE_NAME RESTRICTED_PKG_LIBDIR RESTRICTED_PKG_SHAREDIR

usage_error()
{
    echo "error $1" >&2
    echo "Try '$0 --help' for more information." >&2
    return 1
}

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            shift
            echo "Usage: $0 COMMAND [COMMAND_OPTIONS]"
            echo "Usage: $0 --help"
            echo
            echo "Manage restricted packages."
            echo
            echo "Options:"
            echo "    -h, --help                   print help and exit"
            echo
            echo "Commands:"
            echo "    configure                    configure package"
            echo "    download                     download upstream pack"
            echo "    install                      install package"
            echo "    unconfigure                  unconfigure package"
            echo "    uninstall                    uninstall package"
            echo "    list                         list all packages and their status"
            echo
            exit 0
            ;;
        --)
            shift
            break
            ;;
        -*)
            usage_error "invalid argument '$1'"
            ;;
        *)
            break
            ;;
    esac
done

if [ $# -lt 1 ]; then
    usage_error "invalid number of arguments ($#), at least 1"
fi

command=$1
shift

case "${command}" in
    download|unpack|install|uninstall|list|configure|unconfigure)
        "${RESTRICTED_PKG_LIBDIR}/commands/${command}" "$@"
        ;;
    *)
        usage_error "unknown command '${command}'"
esac

exit 0
