set -eu

RESTRICTED_PKG_LIBDIR=${RESTRICTED_PKG_LIBDIR:-/usr/lib/puavo-ltsp-client/restricted-packages}
RESTRICTED_PKG_SHAREDIR=${RESTRICTED_PKG_SHAREDIR:-/usr/share/puavo-ltsp-client/restricted-packages}
RESTRICTED_PKG_STATEDIR=${RESTRICTED_PKG_STATEDIR:-/state/restricted-packages}

if [ -z "${PUAVOLTSP_IMAGE_NAME:-}" ]; then
    read PUAVOLTSP_IMAGE_NAME </etc/ltsp/this_ltspimage_name
fi

export PUAVOLTSP_IMAGE_NAME    \
       RESTRICTED_PKG_LIBDIR   \
       RESTRICTED_PKG_SHAREDIR \
       RESTRICTED_PKG_STATEDIR

usage_error()
{
    echo "error $1" >&2
    echo "Try '$0 --help' for more information." >&2
    return 1
}

print_help_and_exit()
{
    echo "Usage: $0 [COMMAND] [COMMAND_OPTIONS]"
    echo
    echo "Package manager for Puavo packages."
    echo
    echo "Commands:"
    echo "    install                      install a package"
    echo "    list                         list installed packages"

    echo
    exit 0
}

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            shift
            print_help_and_exit
            ;;
        --)
            shift
            break
            ;;
        -*)
            usage_error "invalid argument '$1'"
            ;;
        *)
            break
            ;;
    esac
done

if [ $# -lt 1 ]; then
    print_help_and_exit
fi

command=$1
shift

case "${command}" in
    install|list)
        "${RESTRICTED_PKG_LIBDIR}/commands/${command}" "$@"
        ;;
    *)
        usage_error "unknown command '${command}'"
esac

exit 0
