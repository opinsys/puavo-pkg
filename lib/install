set -eu

on_exit()
{
    local exitval=$?
    set +e

    rm -rf "${installdir}.tmp"

    exit $exitval
}

usage_error()
{
    echo "error $1" >&2
    echo "Try 'puavo-restricted-package-tool install --help' for more information." >&2
    return 1
}

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            shift
            echo "Usage: puavo-restricted-package-tool install PACKAGE"
            echo "Usage: puavo-restricted-package-tool install --help"
            echo
            echo "Install a restricted package."
            echo
            echo "Options:"
            echo "    -h, --help                   print help and exit"
            echo
            exit 0
            ;;
        --)
            shift
            break
            ;;
        -*)
            usage_error "invalid argument '$1'"
            ;;
        *)
            break
            ;;
    esac
done

if [ $# -ne 1 ]; then
    usage_error "invalid number of arguments ($#), expected 1"
fi

package=$1
shift

installdir="/state/restricted-packages/${package}/i"

if [ -d "${installdir}" ]; then
    if [ -x "/usr/share/puavo-ltsp-client/restricted-packages/${package}/postinst" ]; then
        "/usr/share/puavo-ltsp-client/restricted-packages/${package}/postinst" "${installdir}"
    fi
    exit 0
fi

custom_script="/usr/share/puavo-ltsp-client/restricted-packages/${package}/install"
upstream_pack="/state/restricted-packages/${package}/upstream.pack"
upstream_pack_md5sum=$(cat "/usr/share/puavo-ltsp-client/restricted-packages/${package}/upstream.pack.md5sum")

if [ ! -f "${upstream_pack}" ]; then
    echo "E: cannot install package '${package}' because the upstream pack" \
        "is missing, download it first" >&2
    exit 1
fi

echo "${upstream_pack_md5sum}  ${upstream_pack}" | md5sum --check --status || {
    echo "E: md5 checksum of the upstream pack '${upstream_pack}' does not" \
        "match the known checksum ${upstream_pack_md5sum}," \
        "perhaps you should purge the package and download it again?" >&2
    exit 1
}

trap on_exit EXIT

# We own this directory!
rm -rf "${installdir}.tmp"
mkdir "${installdir}.tmp"

if [ -x "${custom_script}" ]; then
    "${custom_script}" "${upstream_pack}" "${installdir}.tmp"
fi

mv -T "${installdir}.tmp" "${installdir}"

if [ -x "/usr/share/puavo-ltsp-client/restricted-packages/${package}/postinst" ]; then
    "/usr/share/puavo-ltsp-client/restricted-packages/${package}/postinst" "${installdir}"
fi

exit 0
