#!/bin/sh

set -eu

package=$1

installdir="/state/restricted-packages/${package}/i"
activate_log="/state/restricted-packages/${package}/activate.log"

if [ -f "${activate_log}" ]; then
    echo "E: package '${package}' is still active, deactivate it first" >&2
    exit 1
fi

rm -rf "${installdir}"

exit 0
