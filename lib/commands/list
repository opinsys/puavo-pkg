set -eu

. "${PUAVO_PKG_LIBDIR}/common.bash"

usage_error()
{
    echo "error $1" >&2
    echo "Try 'puavo-pkg list --help' for more information." >&2
    return 1
}

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            shift
            echo "Usage: puavo-pkg list"
            echo
            echo "List installed packages."
            echo
            echo "Options:"
            echo "    -h, --help                   print help and exit"
            echo
            exit 0
            ;;
        --)
            shift
            break
            ;;
        -*)
            usage_error "invalid argument '$1'"
            ;;
        *)
            break
            ;;
    esac
done

if [ $# -ne 0 ]; then
    usage_error "invalid number of arguments ($#), expected 0"
fi

list_configured_packages
