set -eu

package=$1
packagedir="/state/restricted-packages/${package}"
installdir="${packagedir}/i"
prpdir="${packagedir}/PRP"
[ -d "${installdir}" ] || {
    echo "E: failed to configure package '${package}' because it is not installed" >&2
    exit 1
}

[ -x "${prpdir}/postinst" ] && "${prpdir}/postinst" "${installdir}" "${prpdir}"

exit 0
